<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">

      <span class="bg-light" style="font-size: 21px;">管理者ログイン</span>

      <%= form_with model: resource, url: admin_session_path, local: true do |f| %>

        <div class="field">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>


        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

    </div>
  </div>
</div>