<div class="egawa2">
<div class="container">
  <div class="row">
    <div class="col-md-8 w-100">
      <h4 class="mt-4"><%= @user.family_name %><%= @user.first_name %>さんのユーザー情報編集</h4>
      <%= form_with model: @user,url:"/admin/users/#{@user.id}",local:true do |f| %>
        <div class="customer-info" >
          <table class="mt-4">
            <tr>
              <td class="pt-2">ユーザーID</td>
              <td class="pt-2 pl-4"><%= @user.id %></td>
            </tr>
            <tr>
              <td class="pt-2">氏名</td>
              <td class="pt-2 pl-4"><%= f.text_field :family_name,class:"rounded" %>　<%= f.text_field :first_name,class:"rounded" %></td>
            </tr>
            <tr>
              <td class="pt-2">フリガナ</td>
              <td class="pt-2 pl-4"><%= f.text_field :family_name_kana,class:"rounded" %>　<%= f.text_field :first_name_kana,class:"rounded" %></td>
            </tr>
            <tr>
              <td class="pt-2">郵便番号</td>
              <td class="pt-2 pl-4"><%= f.number_field :postal_code,class:"rounded" %></td>
            </tr>
            <tr>
              <td class="pt-2">住所</td>
              <td class="pt-2 pl-4"><%= f.text_field :address,class:"rounded" %></td>
            </tr>
             <tr>
              <td class="pt-2">電話番号</td>
              <td class="pt-2 pl-4"><%= f.number_field :phone_number,class:"rounded" %></td>
            </tr>
             <tr>
              <td class="pt-2">メールアドレス</td>
              <td class="pt-2 pl-4"><%= f.email_field :email,class:"rounded" %></td>
            </tr>
             <tr>
              <td class="pt-2">会員ステータス</td>
              <td class="pt-2 pl-4">
                <%= f.radio_button :is_deleted, :false %>
                <%= f.label :is_deleted_false,'有効',class:"pt-2"  %>
                <%= f.radio_button :is_deleted, :true%>
                <%= f.label :is_deleted_true,'退会',class:"pt-2" %>
              </td>
            </tr>
            <tr>
              <td class="pt-4 pl-4"><%= f.submit '変更を保存',class:"btn btn-success text-white" %></td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
