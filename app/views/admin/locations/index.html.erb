<div class="container">
 <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
   </br>
   <span class="bg-light" style="font-size: 21px;">撮影地 管理・追加</span>
   <%= form_with model: @location, url: admin_locations_path, local:true do |f| %>
    <table>
     <tr>
     <th>撮影地名</th>
      <th><%= f.text_field :name %></th>
     </tr>
     <tr>
     <th><%= f.submit '新規登録'%></th>
     </tr>
   <% end %>
   </table>
   </br>
   </br>
   </br>
   <table class="table">
    <thead class="thead-light">
    <th>撮影地</th>
    <th></th>
    </thead>
     <% @locations.each do |location|%>
     
     <tr>
     <th>
     <%= location.name %>
     </th>
     <th>
     <%= link_to "編集する", edit_admin_location_path(location),class:'btn btn-success'  %>
     </th>
    </tr>
    
     <% end %>
   </table>
  </div>
 </div>
</div>