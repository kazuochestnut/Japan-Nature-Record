<div class="egawa">
 <div class="container">
  <div class="row">
   <div class="col-md-2">
    </br>
      <%= link_to new_post_path do %>
      <i class="far fa-plus-square fa-pull-left fa-3x"></i>
      <% end %>
      <%= link_to posts_search_path do %>
      <i class="fas fa-search-plus fa-pull-left fa-3x"></i>
      <% end %>
    </div>
    
    <div class="col-md-10">
     </br>
    <h3>旅の道標</h3>
    <h6>-Post list-</h6>
     <% @posts.each do |post|%>
        <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image, format: 'jpeg' ,class:"img"%>
        <% end %>
     <% end %>
    </br>
    </br>
   </div>
  </div>
 </div>
</div>