<div class="container">
 <h2>UserEditer</h2>
</br>
<%= form_with model: @user, url: users_path, local: true do |f| %>
  
  <div class="field">
    <%= f.label :"ユーザー画像", class: "col-sm-3 control-label" %>
    <%= f.attachment_field :profile_image %>
  </div>
    
  <div class="field">
    <%= f.label :"名前", class: "col-sm-3 control-label" %>
    <%= f.text_field :family_name, autofocus: true, class: "col-sm-2 form-control-static name" %>
    <%= f.text_field :first_name, autofocus: true, class: "col-sm-2 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
    <%= f.text_field :family_name_kana, autofocus: true, class: "col-sm-2 form-control-static name" %>
    <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-2 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号（ハイフンなし）" , class: "col-sm-3 control-label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-sm-2 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"住所" , class: "col-sm-3 control-label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" , class: "col-sm-4 control-label" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号（ハイフンなし）" , class: "col-sm-3 control-label" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" , class: "col-sm-2 control-label" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" , class: "col-sm-3 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "col-sm-2 control-label" %>
  </div>

  <div class="field">
    <%= f.submit "編集内容を保存", class: " btn btn-success col-sm-2 offset-sm-3 mt-3" %>
    <%= link_to "退会する", users_check_path, class: " btn btn-danger offset-sm-1 col-sm-1 mt-3" %>
    </div>
<% end %>
</div>
</div>