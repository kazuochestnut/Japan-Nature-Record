<div class="egawa">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        </br>
         <%= render partial: 'public/users/list', locals: { user: @user , post: @post} %>
         </br>
      </div>
      <div class="col-md-1"></div>
      <div class="col-md-8">
        </br>
        <div class="mypost">
        <% @posts.each do |post|%>
            </br>
            <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post, :image, format: 'jpeg', width: "300px" %>
            <% end %>
            </br>
            <%= link_to post.name , post_path(post.id) , class:'btn btn-link' %>
            </br>
            <div id="likes_buttons_<%= post.id %>">
            <%= render partial: 'public/likes/like', locals: { post: post} %>
            </div>
        <% end %>
        </div>
        </br>
      </div>
    </div>
  </div>
</div>