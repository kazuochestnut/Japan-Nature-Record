  <td>followers</td>
  <td>
    <%= link_to followers_user_path(@user) do %>
      <%= @user.followers.count %>
    <% end %>
  </td>
  </tr>

  <td><%= render 'relationships/follow_button',user: @user %></td>
 

</table>

