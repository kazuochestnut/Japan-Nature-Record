<table class="table">
  <tr>
  <%= attachment_image_tag @user, :profile_image_id, :fill, 50, 50, fallback: "no_image.jpg"%>
  </tr>
  <tr>
  <td>name</td>
  <td><%#= @user.name %></td>
  </tr>
  <tr>
  <td>follows</td>
  <td> 
    <%= link_to following_user_path(@user) do %>
